{{#if user}}
<div class="w-full py-2 fixed z-10 text-center bottom-0 bg-gray-200 drop-shadow-2xl" id="user_footer">
    <div class="w-full z-10">
        You currently have <b>{{round_tenth user.points}}</b> points. <br>
        That's enough to be ranked <b>{{turn_to_ordinal user.user_rank}}</b> out of {{total_users}}!
    </div>
    {{#if user_submitted_totals.submitted}}
    <div class="w-full z-20 md:absolute top-0 left-0 py-2">
        <div class="md:float-left md:ml-4">
            <div class="text-center">
                <span id="user_submitted">{{user_submitted_totals.submitted}}</span> / {{user_submitted_totals.total}}
            </div>
            <div class="text-center font-bold">
                Matches Predicted
            </div>
        </div>
    </div>
    {{/if}}
</div>
{{/if}}
<script>
    {{#if user}}
    if (document.body.scrollTop > document.body.offsetHeight-window.innerHeight-48 || document.documentElement.scrollTop > document.body.offsetHeight-window.innerHeight-48) {
        document.getElementById('user_footer').classList.add("hidden")
    }
    else {
        document.getElementById('user_footer').classList.remove("hidden")
    }
    window.onscroll = function () {
        if (document.body.scrollTop > document.body.offsetHeight-window.innerHeight-48 || document.documentElement.scrollTop > document.body.offsetHeight-window.innerHeight-48) {
            document.getElementById('user_footer').classList.add("hidden")
        }
        else {
            document.getElementById('user_footer').classList.remove("hidden")
        }
    }
    {{/if}}
</script>
